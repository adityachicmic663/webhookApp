@page "/webhook/details/{id}"
@inject HttpClient Http
@using WebHookApp.Client.Models

<h3>Webhook Request Details</h3>

@if (webhookRequest != null)
{
    <p><strong>IP Address:</strong> @webhookRequest.ipAddress</p>
    <p><strong>User-Agent:</strong> @webhookRequest.userAgent</p>
    <p><strong>Headers:</strong> @webhookRequest.headers</p>
    <p><strong>Body:</strong> @webhookRequest.body</p>
    <p><strong>Query Parameters:</strong> @webhookRequest.queryParams</p>
    <p><strong>Files:</strong> @(webhookRequest.files?.Count > 0 ? string.Join(", ", webhookRequest.files) : "No files uploaded.")</p>
}
else
{
    <p>Loading request details...</p>
}

@code {
    [Parameter]
    public string Id { get; set; }

    private WebHookRequestModel webhookRequest;

    protected override async Task OnInitializedAsync()
    {
        await LoadRequestDetails();
    }

    private async Task LoadRequestDetails()
    {
        var response = await Http.GetAsync($"api/WebHook/request/{Id}");
        if (response.IsSuccessStatusCode)
        {
            webhookRequest = await response.Content.ReadFromJsonAsync<WebHookRequestModel>();
        }
    }
}
